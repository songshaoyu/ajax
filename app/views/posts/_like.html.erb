<% if post.liked_users.any? %>
  <%= post.liked_users.map{ |u| u.display_name}.join(',') %>点了赞
<% end %>

<% if current_user %>
  <% if post.find_like(current_user) %>
     <%= link_to unlike_post_path(post), :method => :post, :remote => true, :class => "btn btn-primary" do %>
     <i class="fa fa-thumbs-up" aria-hidden="true"></i>
     <% end %>
  <% else %>
      <%= link_to like_post_path(post), :method => :post, :remote => true, :class => "btn btn-primary" do %>
      <i class="fa fa-thumbs-o-up" aria-hidden="true"></i> <% end %>
  <% end %>
<% end %>
