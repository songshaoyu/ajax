<!-- 新增文章 -->
  <%= simple_form_for Post.new, :remote => true do |f| %>
  <%= f.input :content %>
  <%= f.submit :class => "btn btn-primary" %>
  <% end %>

<br>
<!-- 文章显示 -->
<div id="post-list">
  <% @posts.each do |post| %>
    <%= render :partial => "post", :locals => { :post => post } %>
  <% end %>
</div>
