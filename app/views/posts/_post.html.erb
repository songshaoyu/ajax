<div id="post-<%= post.id %>" class="panel panel-default">

  <div class="panel-heading">
    <%= post.user.display_name %>
  </div>

  <div class="panel-body">
    <!-- like.count -->
      <span id="post-thumbsup-<%= post.id %>" class="label label-success"> <%= post.likes.count %> üëç</span>
</span>

  <p style="margin-top: 20px;">  <%= post.content %></p>

    <div class="text-right">
      <!-- btn-like -->
      <span id="post-like-<%= post.id %>">
       <%= render :partial => "like", :locals => {:post => post} %>
     </span>
     <!-- collect-btn -->
     <span id="post-collect-<%= post.id %>">
       <%= render :partial => "collect", :locals => { :post => post } %>
     </span>

    <!-- button-delete -->
     <% if current_user && post.user == current_user %>
      <p class="pull-right" style="margin-left: 5px;">
        <%= link_to post_path(post), method: :delete, :remote => true, class:"btn btn-danger" do %>

        <i class="fa fa-trash" aria-hidden="true"></i> <% end %>
      </p>
     <% end %>
    </div>
  </div>

  </div>
