<% if post.collected_users.any? %>
  <%= post.liked_users.map{ |u| u.display_name }.join{","} %> 收藏了
<% end %>

<% if current_user %>
   <% if post.find_collect(current_user) %>
     <%= link_to uncollect_post_path(post), :method => :post, :remote => true, :class => "btn btn-success" do %>
     <i class="fa fa-heart" aria-hidden="true"></i> <% end %>
   <% else %>
      <%= link_to collect_post_path(post), :method => :post, :remote => true, :class => "btn btn-success" do %>
      <i class="fa fa-heart-o" aria-hidden="true"></i> <% end %>
   <% end %>
 <% end %>
