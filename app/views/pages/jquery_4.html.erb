<div class="container">
  <div class="row">

    <p>
      <a id="my-replace-click" class=" col-xs-6 col-md-4">Replace</a>
      <a id="my-remove-click" class=" col-xs-6 col-md-4">Remove</a>
      <a id="my-remove-all-click" class=" col-xs-6 col-md-4">Remove All</a>
    </p>

    <div id="foo" style="border: 1px solid red; margin-top: 50px;">
      <p>bar</p>
    </div>

    <div class="zoo"><p>a</p></div>
    <div class="zoo"><p>b</p></div>
    <div class="zoo"><p>c</p></div>

  </div>
</div>
<script type="text/javascript">
  $("#my-replace-click").click(function(){
    $("#foo").replaceWith('<div id="foo" style="border: 1px solid green"><p>foo</p></div>')
  })

  $("#my-remove-click").click(function(){
    $("#foo").remove();
  })

  $("#my-remove-all-click").click(function(){
    $(".zoo").remove();
  })
</script>
